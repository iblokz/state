{
  "name": "iblokz-state",
  "version": "1.0.1",
  "description": "lightweight state management utilities",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "index.js",
    "index.d.ts",
    "lib/",
    "dist/",
    "LICENSE",
    "README.md",
    "API.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.12.0"
  },
  "scripts": {
    "build": "node build.js",
    "lint": "eslint lib",
    "test": "c8 mocha --colors test/**/*",
    "docs": "jsdoc2md lib/**/*.js > API.md",
    "docs:watch": "nodemon --watch lib --exec 'npm run docs'",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm test && npm run lint && npm run docs",
    "version": "npm run docs && git add API.md",
    "postversion": "git push && git push --tags"
  },
  "c8": {
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "test/**",
      "build.js",
      "dist/**",
      "examples/**"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "all": true,
    "check-coverage": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iblokz/state.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iblokz/state/issues"
  },
  "homepage": "https://github.com/iblokz/state#readme",
  "dependencies": {
    "iblokz-data": "^1.6.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "c8": "^10.1.0",
    "chai": "^4.3.10",
    "esbuild": "^0.24.0",
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^8.0.3",
    "jsdoc-to-markdown": "^8.0.0",
    "jsdom": "^24.0.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "state",
    "management",
    "functional",
    "immutable",
    "reducer",
    "dispatch",
    "rxjs",
    "events",
    "microfrontend",
    "localstorage",
    "sessionstorage",
    "iblokz",
    "iblokz-data",
    "action-tree"
  ]
}
